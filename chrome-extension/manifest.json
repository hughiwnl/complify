{
  "manifest_version": 3,
  "name": "Complify",
  "version": "1.2",
  "description": "Reloads the page on real form submission (but not on Next/navigation) and provides a popup to auto-fill random values into forms.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Complify"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
